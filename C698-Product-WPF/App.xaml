<Application x:Class="C698_Product_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:C698_Product_WPF"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <SolidColorBrush x:Key="30Grey" Color="#30868E96"/>
    <SolidColorBrush x:Key="AppGrey" Color="#868E96"/>

    <Style TargetType="Button">
      <Setter Property="Padding" Value="10" />
      <Setter Property="BorderThickness" Value="2.5" />
      <Setter Property="BorderBrush" Value="{StaticResource AppGrey}" />
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="FontSize" Value="40" />
      <Setter Property="Background" Value="{StaticResource 30Grey}" />
      <Setter Property="BorderThickness" Value="0, 0, 0 , 2.5" />
      <Setter Property="BorderBrush" Value="{StaticResource AppGrey}" />
    </Style>


  </Application.Resources>
</Application>
