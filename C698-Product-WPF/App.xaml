<Application x:Class="C698_Product_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:local="clr-namespace:C698_Product_WPF"
             xmlns:viewmodels="clr-namespace:C698_Product_WPF.Data.ViewModels"
             xmlns:dialogs="clr-namespace:C698_Product_WPF.Views.Dialogs">
  
  <Application.Resources>
    <SolidColorBrush x:Key="Grey30" Color="#30868E96"/>
    <SolidColorBrush x:Key="AppGrey" Color="#868E96"/>

    <Style TargetType="Button">
      <Setter Property="BorderThickness" Value="2.5" />
      <Setter Property="BorderBrush" Value="{StaticResource AppGrey}" />
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="Background" Value="{StaticResource Grey30}" />
      <Setter Property="BorderThickness" Value="0, 0, 0 , 2.5" />
      <Setter Property="BorderBrush" Value="{StaticResource AppGrey}" />
    </Style>

    <Style TargetType="DataGridColumnHeader">
      <Setter Property="FontSize" Value="24" />
    </Style>

    <Style TargetType="DataGridCell">
      <Setter Property="FontSize" Value="18" />
    </Style>

  </Application.Resources>
</Application>
